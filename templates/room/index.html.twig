			<div id="wrapper" class="container">


				<!-- Header -->
					<br>
					<header id="header">
						<h1 style="font-size: 50px"> Voici les chambres actuellement disponibles </h1>
					</header>

				<!-- Main -->
					<section id="main" class="row justify-content-center">


						<!-- Thumbnails -->
							<section class="thumbnails " >

								<div style="width: 400px">
									{% for room in rooms %}
									<a href="{{ path('room_show', {id:room.id}) }}">
										<img src="{{ asset('images/thumbs/'~room.image) }}" alt="" />
